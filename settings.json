{
  "editor.fontFamily": "JetBrains Mono,Fira Code,MonoLisa",
  "editor.fontLigatures": true,
  "files.autoSave": "onFocusChange",
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.eslint.format": "explicit",
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  // "remote.SSH.remotePlatform": {
  //   "10.20.90.13": "linux",
  //   "10.20.90.71": "linux"
  // },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.wordWrap": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "diffEditor.codeLens": true,
  "editor.formatOnPaste": true,
  // "window.titleBarStyle": "custom",
  // "window.titleBarStyle": "native",
  // "vscode_vibrancy.theme": "GitHub Dark Default",
  // "redhat.telemetry.enabled": true,
  // "vscode_vibrancy.preventFlash": false,
  // "vscode_vibrancy.preferedDarkTheme": "GitHub Dark Default",
  "debug.console.fontSize": 13,
  "editor.tabSize": 2,
"editor.minimap.autohide": "mouseover",
  "editor.cursorStyle": "underline",
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.fontSize": 14,
  // "codeium.enableConfig": {
  //   "*": false
  // },
  "workbench.startupEditor": "none",
  "[xml]": {
    "editor.defaultFormatter": "mikeburgh.xml-format"
  },

  /** ------------ Workbench Settings ------------ **/
 
  "workbench.editorLargeFileConfirmation": 10024,
  "workbench.editor.showTabs": "single",
  "workbench.tree.indent": 16,
  "workbench.editor.empty.hint": "hidden",

   /** ------------ Breadcrumbs Configurations ------------ **/
  "breadcrumbs.enabled": false,
  "breadcrumbs.symbolPath": "off",
  "breadcrumbs.filePath": "on",

  /** ------------ Editor Settings ------------ **/
  "editor.fontWeight": 450,
  // "editor.lineHeight": 26,
  "editor.lineNumbers": "on",
  "editor.folding": true,
  "editor.glyphMargin": true,
  "editor.guides.indentation": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  // "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": true,

  /** ------------ Terminal Configurations ------------ **/
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorBlinking": true,
  "workbench.colorTheme": "Mayukai Alucard",
  "security.workspace.trust.untrustedFiles": "open",
  "window.menuBarVisibility": "compact",
  "workbench.navigationControl.enabled": false,
  "window.commandCenter": false,
  "remote.SSH.remotePlatform": {
    "10.20.90.71": "linux"
  },
  "workbench.sideBar.location": "right",
  "github.copilot.nextEditSuggestions.enabled": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "chat.mcp.gallery.enabled": true,
  "workbench.iconTheme": "flow-light",
  "git.confirmSync": false,
  // "glassit.
}
